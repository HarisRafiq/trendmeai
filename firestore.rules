rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own data
    match /users/{userId}/influencers/{influencerId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/posts/{postId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write news articles (shared across all users)
    // Read: anyone authenticated can read news for any niche
    // Write: anyone authenticated can fetch and cache news articles
    match /newsArticles/{niche}/articles/{articleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write metadata documents
    // Metadata tracks last fetch time per niche to prevent excessive API calls
    match /newsArticles/{niche}/metadata/{metadataId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
